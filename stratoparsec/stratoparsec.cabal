cabal-version: 3.0

name: stratoparsec
version: 0

common base
    default-language: Haskell2010
    ghc-options: -Wall -fdefer-typed-holes
    default-extensions:
        AllowAmbiguousTypes
        BlockArguments
        ConstraintKinds
        DeriveFunctor
        DerivingStrategies
        DerivingVia
        LambdaCase
        GADTs
        GeneralizedNewtypeDeriving
        ScopedTypeVariables
        StandaloneDeriving
        StandaloneKindSignatures
        TypeApplications
        TypeFamilies
        ViewPatterns
    build-depends:
        base
      , bytestring
      , containers
      , list-transformer
      , relude
      , text
    mixins:
        base (Data.Char as Char, Data.Word as Word, Text.Show as Show, Control.Monad as Monad)
      , bytestring (Data.ByteString as ByteString, Data.ByteString.Lazy as LByteString)
      , containers (Data.Set as Set, Data.Map.Strict as Map, Data.Sequence as Seq)
      , list-transformer (List.Transformer as ListT)
      , relude (Relude as Prelude)
      , text (Data.Text as Text, Data.Text.Lazy as LText)

library
    import: base
    hs-source-dirs: library/stratoparsec
    exposed-modules:
        Stratoparsec.BufferedStream
      , Stratoparsec.BufferedStream.Type
      , Stratoparsec.BufferedStream.Util
      , Stratoparsec.ByteString
      , Stratoparsec.ByteString.BufferType
      , Stratoparsec.ByteString.BufferUtil
      , Stratoparsec.ByteString.ParserType
      , Stratoparsec.ByteString.Parsers
      , Stratoparsec.Context
      , Stratoparsec.Context.Type
      , Stratoparsec.Context.Util
      , Stratoparsec.Name
      , Stratoparsec.Parser
      , Stratoparsec.Parser.Type
      , Stratoparsec.Parser.Util
      , Stratoparsec.Text
      , Stratoparsec.Text.BufferType
      , Stratoparsec.Text.BufferUtil
      , Stratoparsec.Text.ParserType
      , Stratoparsec.Text.Parsers
      , Stratoparsec.TextLike
      , Stratoparsec.TextLike.Class
      , Stratoparsec.TextLike.Parsers
      , Stratoparsec.TextLike.ParserType
